<%= form_for @work do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %> <!-- gives us <input type="text" name="title">  -->
  </fieldset>
  <fieldset>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </fieldset>
  <fieldset>
    <%= f.label :medium %>
    <%= f.text_field :medium %>
  </fieldset>
  <fieldset>
    <%= f.label :style %>
    <%= f.text_field :style %>
  </fieldset>
  <fieldset>
    <%= f.label :image, 'Image URL' %>
    <%= f.url_field :image %>
  </fieldset>

  <fieldset>
    <%= f.label :artist_id, 'Artist' %>
    <%= f.select :artist_id, Artist.all.pluck(:name, :id), include_blank: true  %>
  </fieldset>


  <%= f.submit %>

<% end %>
